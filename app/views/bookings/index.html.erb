<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Renter</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= @current_user.id %>
      <tr>
        <td><%= @bookings.listing.title %></td>
        <td><%= @bookings.renter_id %></td>
        <td><%= @bookings.start_time.to_formatted_s(:time) %></td>
        <td><%= @bookings.end_time.to_formatted_s(:time) %></td>
        <td><%= @bookings.date.to_formatted_s(:short) %></td>
        <td><%= link_to 'Show', user_booking_path(id: @bookings.id) %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(id: @bookings.id) %></td>
        <td><%= link_to 'Destroy', user_booking_path(id: @bookings.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

<br>

