<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Renter</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @bookings.each do |booking| %>
        <td><%= booking.listing.title %></td>
        <td><%= booking.renter_id %></td>
        <td><%= booking.start_time.to_formatted_s(:time) %></td>
        <td><%= booking.end_time.to_formatted_s(:time) %></td>
        <td><%= booking.date.to_formatted_s(:short) %></td>
        <td><%= link_to 'Show', user_booking_path(id: booking.id) %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(id: booking.id) %></td>
        <td><%= link_to 'Destroy', user_booking_path(id: booking.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

