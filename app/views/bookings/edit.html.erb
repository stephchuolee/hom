<h1 class="col s12 m12 l12 center">Editing Booking</h1>

<%= form_for([@booking]) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col s10 m8 l4 offset-l5 offset-m2 offset-s1">
      <div class="bookings_form">
        <div class="field_booking">
          <%= f.label :date %>
          <%= f.date_field :date %>
        </div>
        <div class="field_booking">
          <%= f.label :start_time %>
          <%= f.time_field :start_time %>
        </div>
        <div class="field_booking">
          <%= f.label :end_time %>
          <%= f.time_field :end_time %>
        </div>
        <div>
          <%= f.hidden_field :user_id %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<%= link_to 'Back', bookings_path %>
