<!DOCTYPE html>
<html>
<head>
  <title>Hom</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <div class="container">
    <div class="logo"><a href="/"><%= image_tag("logo.svg", :alt => "Hom Logo") %></a></div>
    <ul>
      <li id="search">

          <%= form_tag "/listings/search", method: "get" do %>
          <%= text_field_tag :city, nil, placeholder: 'Find your home...' %>
          <!-- <%= text_field_tag "search", 'Enter search term...' %> -->
          <%= submit_tag("Search") %>
          <% end %>
      </li>
      <li><%= link_to "Bookings", bookings_path %></li>
      <li><%= link_to "Listings", listings_path %></li>
      <% if @current_user %>
        <li><%= link_to "Logout", sessions_path("current"), method: :delete %></li>
      <% else %>
        <li><%= link_to "Login", new_sessions_path %></li>
      <% end %>

      <% if @current_user %>
        <li> Hi, <%= @user_first_name %>! </li>
      <% end %>
    </ul>
  </div>
</nav>
<!-- <div class="sub-nav">
  <ul>
    <li>Placeholder 1</li>
    <li>Placeholder 2</li>
  </ul>
</div> -->
<div class="container">
  <%= yield %>
</div>

</body>
</html>
