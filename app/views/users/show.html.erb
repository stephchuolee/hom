<p id="notice"><%= notice %></p>

<div>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %> 
  <% if @current_user.id == @user.id %>
  | <%= link_to 'Bookings', bookings_path(@user)%>
  <% end %>
</div>

<div id="profile">
  <div id="profile_pic">
    <%= image_tag(@user.image.profile) %>
  </div>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
  
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  
  <p>
    <strong>Location:</strong>
    <%= @user.location %>
  </p>
  
  
  <p>
    <strong>Blurb:</strong>
    <%= @user.blurb %>
  </p>
  
  <p>
    <strong>Rental Properties Owned:</strong><br>
    <% @user.listings.each do |listing| %>
    <a><%= link_to "#{listing.title}", listing_path(id: listing.id, user_id: @user.id) %><br>
    <% end %>
  </p>
</div>

