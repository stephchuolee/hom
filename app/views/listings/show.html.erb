<div class="row">
  <div class="col l6 s12">
    <%= link_to 'Back', listings_path %>
    <div class="listing">
      <p>
        <% @listings.each do |listing| %>
        <strong>Price:</strong>
        <%= listing.price %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= listing.title %>
      </p>
    </div>
  </div>

  <div class="col l6 s12">
    <div class="calendar">

    </div>
  </div>

</div>

<div class="row">
  <div class="col l6 s12">
    <div class="information">
      <li>
        <strong>User:</strong>
        <%= listing.user.name %>
      </li>

      <li>
        <strong>Square footage:</strong>
        <%= listing.square_footage %>
      </li>

      <li>
        <strong>Bedroom:</strong>
        <%= listing.bedroom %>
      </li>

      <li>
        <strong>Bathroom:</strong>
        <%= listing.bathroom %>
      </li>

      <li>
        <strong>Address:</strong>
        <%= listing.address %>
      </li>

      <li>
        <strong>Furnished:</strong>
        <%= listing.furnished %>
      </li>

      <li>
        <strong>Pets:</strong>
        <%= listing.pets %>
      </li>

      <li>
        <strong>Smoking:</strong>
        <%= listing.smoking %>
      </li>

      <li>
        <strong>Floor number:</strong>
        <%= listing.floor_number %>
      </li>

      <li>
        <strong>Parking space:</strong>
        <%= listing.parking_space %>
      </li>

      <li>
        <strong>Storage space:</strong>
        <%= listing.storage_space %>
      </li>

      <li>
        <strong>Balcony:</strong>
        <%= listing.balcony %>
      </li>

      <li>
        <strong>Available date:</strong>
        <%= listing.available_date %>
      </li>

      <li>
        <strong>Minimum lease:</strong>
        <%= listing.minimum_lease %>
      </li>

      <li>
        <strong>Image:</strong>
        <%= listing.image %>
      </li>

      <li>
        <strong>Rental type:</strong>
        <%= listing.rental_type %>
      </li>

      <li>
        <strong>Description:</strong>
        <%= listing.description %>
      </li>
      <li>  
        <strong>Book a Viewing Time:</strong><br>
        <% listing.bookings.each do |booking| %>
        <a href = "#">
        <%= booking.date.to_formatted_s(:short) %>
        <%= booking.start_time.to_formatted_s(:time) %>
        <%= booking.end_time.to_formatted_s(:time) %>
        </a><br>
        <% end %>
      </li>
    </div>
  </div>

  <div class="col l6 s12">
    <div class="map">
      <div id="map" data-listing-id="<%=listing.id%>"></div>
      <style>
        #map {
          height: 500px;
          width: 50%;
          float: right;
        }
        #scheduler {
          width: 50%;
          float: right;
          height: 500px;
          background-color: red;
          color: #ffffff;
        }
        #listing_head {
          width: 50%;
          height: 500px;
          background-color: blue;
          color: #ffffff;
          float: left;
        }
        #listing_details {
          width: 50%;
          float: left;
        }
      </style>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="neighbourhood">

    </div>
  </div>
</div>
