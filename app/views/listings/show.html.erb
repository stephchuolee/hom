<div class="row">
  <div class="col s12 l6">

    <button class="back"><%= link_to 'Back to listings', listings_path %></button>

    <div class="listing">
      <%= image_tag("home1.jpg", :alt => "home listing images") %>
      <p>
        <strong>Price:</strong>
        <%= @listing.price %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @listing.title %>
      </p>
    </div>
  </div>

  <div class="col s12 l6">
    <div class="calendar">
      Insert Schedule
    </div>
  </div>

</div>

<div class="row">
  <div class="col l6 s12">
    <div class="information">
      <li>
        <strong>User:</strong>
        <%= @listing.user.name %>
      </li>

      <li>
        <strong>Square footage:</strong>
        <%= @listing.square_footage %>
      </li>

      <li>
        <strong>Bedroom:</strong>
        <%= @listing.bedroom %>
      </li>

      <li>
        <strong>Bathroom:</strong>
        <%= @listing.bathroom %>
      </li>

      <li>
        <strong>Address:</strong>
        <%= @listing.address %>
      </li>

      <li>
        <strong>Furnished:</strong>
        <%= @listing.furnished %>
      </li>

      <li>
        <strong>Pets:</strong>
        <%= @listing.pets %>
      </li>

      <li>
        <strong>Smoking:</strong>
        <%= @listing.smoking %>
      </li>

      <li>
        <strong>Floor number:</strong>
        <%= @listing.floor_number %>
      </li>

      <li>
        <strong>Parking space:</strong>
        <%= @listing.parking_space %>
      </li>

      <li>
        <strong>Storage space:</strong>
        <%= @listing.storage_space %>
      </li>

      <li>
        <strong>Balcony:</strong>
        <%= @listing.balcony %>
      </li>

      <li>
        <strong>Available date:</strong>
        <%= @listing.available_date %>
      </li>

      <li>
        <strong>Minimum lease:</strong>
        <%= @listing.minimum_lease %>
      </li>

      <li>
        <strong>Rental type:</strong>
        <%= @listing.rental_type %>
      </li>

      <li>
        <strong>Description:</strong>
        <%= @listing.description %>
      </li>
    </div>
  </div>

  <div class="col l6 s12">
    <div class="location">
      <div id="map" data-listing-id="<%=@listing.id%>"></div>
    </div>
  </div>
</div>

