
<div id="listing_head">id="listing_head" <br>// listing pictures/title/price/link_to profile/link_to contact/fav(true/false) will go here.</div>
<div id="scheduler">id="scheduler" <br>// booking scheduler will go here.</div>



<p id="notice"><%= notice %></p>
<div id="listing_details">
<p>
  <strong>User:</strong>
  <%= @listing.user %>
</p>

<p>
  <strong>Square footage:</strong>
  <%= @listing.square_footage %>
</p>

<p>
  <strong>Bedroom:</strong>
  <%= @listing.bedroom %>
</p>

<p>
  <strong>Bathroom:</strong>
  <%= @listing.bathroom %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Address:</strong>
  <%= @listing.address %>
</p>

<p>
  <strong>Furnished:</strong>
  <%= @listing.furnished %>
</p>

<p>
  <strong>Pets:</strong>
  <%= @listing.pets %>
</p>

<p>
  <strong>Smoking:</strong>
  <%= @listing.smoking %>
</p>

<p>
  <strong>Floor number:</strong>
  <%= @listing.floor_number %>
</p>

<p>
  <strong>Parking space:</strong>
  <%= @listing.parking_space %>
</p>

<p>
  <strong>Storage space:</strong>
  <%= @listing.storage_space %>
</p>

<p>
  <strong>Balcony:</strong>
  <%= @listing.balcony %>
</p>

<p>
  <strong>Available date:</strong>
  <%= @listing.available_date %>
</p>

<p>
  <strong>Minimum lease:</strong>
  <%= @listing.minimum_lease %>
</p>

<p>
  <strong>Image:</strong>
  <% @listing.listing_images.each do |array| %>
    <%= image_tag(array.image) %>
    <%= link_to "Edit Imaage", edit_listing_image_path(array) %>
  <% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Rental type:</strong>
  <%= @listing.rental_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>
</div>
<div id="map" data-listing-id="<%=@listing.id%>"></div>
<style>
  #map {
    height: 500px;
    width: 50%;
    float: right;
  }
  #scheduler {
    width: 50%;
    float: right;
    height: 500px;
    background-color: red;
    color: #ffffff;
  }
  #listing_head {
    width: 50%;
    height: 500px;
    background-color: blue;
    color: #ffffff;
    float: left;
  }
  #listing_details {
    width: 50%;
    float: left;
  }
</style>

<% if @current_user.id == @listing.user_id %>
  <%= link_to 'Edit', edit_user_listing_path(@listing.user_id, @listing) %> |
<% end %>
<%= link_to 'Back', listings_path %>
